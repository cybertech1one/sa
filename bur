        <p><strong>Duration:</strong> """ + str(datetime.now() - self.start_time) + """</p>
"""
            
            if self.technologies:
                html += "<p><strong>Technologies:</strong> "
                for tech in self.technologies:
                    html += f'<span class="tech-badge">{tech}</span>'
