  advancedMacroObfuscation: {
    patterns: [
      { regex: /Environ\s*\(\s*StrReverse\s*\("PMET"\)\s*\)|Environ\s*\(\s*Chr\s*\(84\)\s*&\s*Chr\s*\(69\)\s*&\s*Chr\s*\(77\)\s*&\s*Chr\s*\(80\)\s*\)/gi, severity: "high", description: "Obfuscated temp folder access" },
